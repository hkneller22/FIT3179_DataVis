{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "School Sector Funding per student and Average Difference in NMS Scores",
    "projection": {"type": "equirectangular"},
    "layer": 
    [
      {
        "data": 
            {
              "url": "data/STE_2021_AUST_GDA2020_grat.json",
              "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
            },
        "mark": {"type": "geoshape", "stroke": "white"},
        "transform": 
        [
          {
            "lookup": "properties.STE_NAME21",
            "from":
            {
              "data":
              {
                "url": "data/naplan_pivot_NMS.csv"
              },
              "key": "State",
              "fields": ["POC_Group_1",	"POC_Group_2", "POC_Group_3,", "POC_Group_4",	"POC_NIPW"]
            }
          },
          {"calculate": "datum.POC_Group_1 - datum.POC_NIPW" , "as": "G1_NIPW_%diff"}
        ],
        
        "encoding": 
        {
          "tooltip":
          [
            {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
            {"field": "G1_NIPW_%diff", "type": "quantitative", "title": "Percent Difference", "format": "0.2f"}

          ],
          "color":
          {
            "field": "G1_NIPW_%diff",
            "title": "Percent Difference",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [16, 20, 50],
              "range": ["#e66101","#fdb863","#b2abd2","#5e3c99"]
            }
          }
        }
      },
      

      {
        "data":
        {
          "url": "data/STE_2021_AUST_GDA2020_grat.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "stroke": "dimgrey"}
      },
      {
        "data":
        {
          "url": "data/STE_2021_AUST_GDA2020_grat.json",
          "format": {"type": "topojson", "feature": "annotations"}
        },
        "mark": {"type": "geoshape", "stroke": "black"}
      },


      {
        "data": 
            {
              "url": "data/state_longlat.csv",
              "format": {"type": "csv"}
            },
        "mark": {"type": "area"},
        "transform": 
        [
          {
            "lookup": "State",
            "from":
            {
              "data":
              {
                "url": "data/school_pivot2022_pstud.csv"
              },
              "key": "State",
              "fields": ["Government", "Catholic", "Independent", "Students_CAT", "Students_GOV", "Students_IND"]
            }
          
          },

          {"calculate": "datum.Government / (0.5*datum.Catholic + 0.5*datum.Independent)", "as": "Public_to_Private"},
          {"calculate": "datum.Students_GOV / (datum.Students_IND + datum.Students_GOV + datum.Students_CAT)", "as": "Frac_stud_govsch"}
          
        ],
        
        "encoding": 
        {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size":
          {
            "field": "Public_to_Private",
            "type": "quantitative",
            "title": "Public : Private Funding Ratio",
            "scale": {"type": "threshold", "domain": [0.2, 0.4, 0.6, 0.8, 1]}
          },

          "color":
          {
            "value": "brown"
          },
          "tooltip": 
          [
            {"field": "State", "type": "nominal", "title": "State"},
            {"field": "Public_to_Private", "type": "quantitative", "title": "Public : Private Student Funding", "format": ".2f"}
          ],
          "shape":
          {
            "value": "circle"
          }
        }
      }
  
    ]
}