
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "data": 
    {
        "url": "chal_data/earthquake_lite.csv",
        "format": {"type": "csv"}
    },
    "vconcat": 
    [
        {
            "width": 600,
            "height": 300,
            "transform": 
            [
                {"bin": {"step": 0.5, "extent": [5, 7]}, "field": "mag", "as": "Magnitude"}
            ],
            "mark": "area",
            "encoding": 
            {
                "x": 
                {
                    "field": "time", 
                    "timeUnit": "yearmonth", 
                    "axis": {"title": "", "tickCount": 5, "grid": false},
                    "scale": 
                    {
                        "domain": {"param": "brush"}
                    }   
                },
                "y": 
                {
                    "aggregate": "count",
                    "field": "mag", 
                    "type": "quantitative",
                    "title": "Count of Earthquakes"
                },
                "color":
                {
                    "field": "Magnitude",
                    "scale": 
                    {
                        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#bd0026", "#7f0000"]
                    },
                    "legend": { "values": [5, 5.5, 6, 6.5]}
                }
                
            }
        
        }, 
        {
            "width": 600,
            "height": 60,
            "mark": "line",
            "params": 
            [
                {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
            ],
            "encoding": 
            {
                "x": {"field": "time", "type": "temporal", "timeUnit": "yearmonth"},
                "y": {"field": "mag", "aggregate": "count", "type": "quantitative", "axis": {"tickCount": 3, "grid": false}}
            }
        }
    ]
}