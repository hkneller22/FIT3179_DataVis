{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Earthquakes of magnitude 4 or large between 4 Oct 2020 and 10 Oct 2020",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "data/ne_110m_WRLD.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "data/earthquake.csv"
        },
        "mark": {"type": "area", "tooltip": {"content": "encoding"}},
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "size": {
            "field": "dmin",
            "type": "quantitative",
            "title": "Duration (mins)"
          },
          "color": {
            "field": "mag",
            "type": "quantitative",
            "title": "Magnitude (Richter scale)",
            "scale": {"domain": [4, 8], "scheme": "yelloworangered", "type": "linear"}
          },
          "shape":  {
            "field": "locationSource",
            "type": "nominal",
            "title": "Location Source"
          }
        }
      }
    ]
  }